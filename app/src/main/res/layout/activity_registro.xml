<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="login.integradorcliente.Registro">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/CreaNombre"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/CreaContra"
        android:layout_below="@+id/CreaNombre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:hint="ContraseÃ±a" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/CreaApellido"
        android:layout_below="@+id/CreaContra"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Apellido" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/CreaNickname"
        android:layout_below="@+id/CreaApellido"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Nickname" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:id="@+id/crear"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/CreaApellido"
        android:onClick="botonCrear"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
